<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/imageButtonDigi"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:background="@null"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/digi" />

    <ImageButton
        android:id="@+id/imageButtonUmobile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/umobile" />

    <ImageButton
        android:id="@+id/imageButtonHotlink"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/hotlink" />

    <ImageButton
        android:id="@+id/imageButtonXpax"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/xpax" />

</LinearLayout>